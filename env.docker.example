# MoreAI Docker Configuration
# Copy this file to .env and fill in your actual values

# Flask Secret Key (generate a strong random key for production)
SECRET_KEY=your-super-secret-key-change-in-production

# Database Configuration
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://username:password@postgres:5432/moreai_db

# For SQLite (default, stored in Docker volume):
DATABASE_URL=sqlite:///moreai.db

# OpenAI API Key (required)
OPENAI_API_KEY=your-openai-api-key-here

# Environment
FLASK_ENV=production
FLASK_DEBUG=0 